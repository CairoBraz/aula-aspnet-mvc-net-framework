@{ 
    ViewBag.Title = "Home Page";
}
@using AspNetFrameworkMVC.ModelViews;

<div class="jumbotron">
    <h1>Autenticação</h1>

    <hr />

    <div class="wrapper fadeInDown">
        <div id="formContent">
            <!-- Tabs Titles -->

            <!-- Login Form -->
            <form action="/login/logar" method="post">
                <input type="text" id="login" class="fadeIn second" name="login" placeholder="login">
                <input type="text" id="password" class="fadeIn third" name="senha" placeholder="password">

               @if (Model != null && !string.IsNullOrEmpty(((ErroModelView)Model).Mensagem))
               {
                   <div class="alert alert-danger" role="alert">
                       @(((ErroModelView)Model).Mensagem)
                   </div>
               }

                <input type="submit" class="fadeIn fourth" value="Log In">
            </form>

            <!-- Remind Passowrd -->
            <div id="formFooter">
                <a class="underlineHover" href="#">Forgot Password?</a>
            </div>

        </div>
    </div>

</div>
